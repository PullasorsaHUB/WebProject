model Recipe {
  id            Int      @id @default(autoincrement())
  title         String
  description   String?
  ingredients   String
  instructions  String
  imageUrl      String?
  createdAt     DateTime @default(now())
  createdBy     Int?
  author        User?    @relation("RecipeAuthor", fields: [createdBy], references: [id], onDelete: SetNull)
  favorites     Favorite[]
}

model User {
  id            Int       @id @default(autoincrement())
  userName      String?
  passwordHash  String
  email         String    @unique
  createdAt     DateTime @default(now())
  favorites     Favorite[]
  recipes       Recipe[]  @relation("RecipeAuthor")
}

model Favorite {
  id            Int     @id @default(autoincrement())
  userId        Int
  recipeId      Int
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe        Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())

  @@unique([userId, recipeId])
}

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}